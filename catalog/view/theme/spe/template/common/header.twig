<header>
    <div class="container-fluid">
        <div class="header-block row">
            <div class="col-sm-2">
                <div id="logo" class="header-logo">
                    {% if logo %}
                        <a href="{{ home }}" class="header-logo__img">
                            <img src="{{ logo }}" title="{{ name }}"alt="{{ name }}" class="img-responsive"/>
                        </a>
                    {% else %}
                        <a href="{{ home }}" class="header-logo__link">{{ name }}</a>
                    {% endif %}
                </div>
            </div>
            <div class="col-sm-6">
                {{ menu }}
            </div>
            <div class="col-sm-2">{{ search }}</div>
            <div class="col-sm-1">
                {% if logged %}

                    <div class="header-account">
                        <button id="header-account" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="header-account__btn">
                            <i class="header-account__icon fa fa-shopping-cart"></i>
                            <span class="header-account__indicate header-account__indicate_on"> </span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="header-account">
                            <li><a href="{{ account }}">{{ text_account }}</a></li>
                            <li><a href="{{ order }}">{{ text_order }}</a></li>
                            <li><a href="{{ transaction }}">{{ text_transaction }}</a></li>
                            <li><a href="{{ download }}">{{ text_download }}</a></li>
                            <li><a href="{{ logout }}">{{ text_logout }}</a></li>
                        </ul>
                    </div>

                {% else %}
                    <li><a href="{{ register }}">{{ text_register }}</a></li>
                    <li><a href="{{ login }}">{{ text_login }}</a></li>
                {% endif %}
            </div>
            <div class="col-sm-1">{{ cart }}</div>
        </div>
    </div>
</header>
