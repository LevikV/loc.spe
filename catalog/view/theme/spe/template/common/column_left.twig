{% if modules or breadcrumbs %}
    <aside id="column-left" class="col-sm-3 hidden-xs">

        {% if breadcrumbs %}
            <div class="row">
                <div class="col-xs-12">
                    <ul class="breadcrumb">
                        {% for breadcrumb in breadcrumbs %}
                            <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% endif %}

        {% for module in modules %}
            {{ module }}
        {% endfor %}
    </aside>
{% endif %}
