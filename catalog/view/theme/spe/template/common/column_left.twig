{% if modules or breadcrumbs or speallcat %}
    <aside id="column-left" class="col-sm-3 hidden-xs">

        {% if breadcrumbs or speallcat %}
            <div class="row">
                <div class="col-xs-12">
                    <div class="spe-cat-breadcramb">
                        {% if speallcat %}
                            <h3>{{ speallcat }}</h3>
                        {% else %}
                            <ul class="breadcrumb">
                                {% for breadcrumb in breadcrumbs %}
                                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endif %}

        {% for module in modules %}
            {{ module }}
        {% endfor %}
    </aside>
{% endif %}
