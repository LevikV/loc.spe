<div class="row spe-featured-block">
    <div class="col-xs-12 spe-featured-block_title">
        <h2>{{ name }}</h2>
    </div>
    <div class="col-xs-12">
        <ul class="spe-featured-block__nav nav nav-pills">
            <li class="active">
                <a href="#spe-featured-tab-1" data-toggle="pill">{{ tab_title }}</a>
            </li>

            {% if products2 %}
                <li>
                    <a href="#spe-featured-tab-2" data-toggle="pill">{{ tab_title2 }}</a>
                </li>
            {% endif %}

            {% if products3 %}
                <li>
                    <a href="#spe-featured-tab-3" data-toggle="pill">{{ tab_title3 }}</a>
                </li>
            {% endif %}

        </ul>
        <div class="tab-content">
            <div id="spe-featured-tab-1" class="tab-pane fade in active">

                {% for product in products %}
                    <div class="product-layout col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <a href="{{ product.href }}">
                            <div class="product-thumb transition">
                                <div class="image">
                                    <img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive"/>
                                </div>
                                <div class="caption">
                                    {% if product.namecat %}
                                        <h5>{{ product.namecat }}</h5>
                                    {% endif %}
                                    <h4>{{ product.name }}</h4>

                                    {% if product.price %}
                                        <p class="price">
                                            {% if not product.special %}
                                                {{ product.price }}
                                            {% else %}
                                                <span class="price-new">{{ product.special }}</span> <span
                                                    class="price-old">{{ product.price }}</span>
                                            {% endif %}
                                        </p>
                                    {% endif %}
                                    {% if product.rating %}
                                        <div class="rating">
                                            {% for i in 1..5 %}
                                                {% if product.rating < i %}
                                                    <span class="fa fa-stack">
                                                    <i class="fa fa-star-o fa-stack-2x"></i>
                                                </span>
                                                {% else %}
                                                    <span class="fa fa-stack">
                                                    <i class="fa fa-star fa-stack-2x"></i>
                                                    <i class="fa fa-star-o fa-stack-2x"></i>
                                                </span>
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}

            </div>
