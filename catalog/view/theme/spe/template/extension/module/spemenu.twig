<div class="row">
    <nav>
        <ul class="top-menu">
            {% for parent in spemenu %}
                {% if not parent.children is null %}
                    {% if parent.type_item == 'type-cat' %}
                        <li>
                            <a href="?route=extension/module/specategoryall" class="dropdown">{{ parent.title }}</a>
                            <ul class="submenu">
                                {% for category_child in parent.children %}
                                    <li>

                                        <h3><a href="{{ category_child.href }}">{{ category_child.name }}</a></h3>
                                        {% if not category_child.childs is null %}
                                            <ul>
                                                {% set childs_count = 0 %}
                                                {% for category_child_child in category_child.childs if childs_count < 3 %}
                                                    <li><a href="{{ category_child_child.href }}">{{ category_child_child.name }}</a></li>
                                                    {% set childs_count = childs_count + 1 %}
                                                    {% if childs_count >= 3 %}
                                                        <li><a href="{{ category_child.href }}">Все категории >></a></li>
                                                    {% endif %}
                                                {% endfor %}
                                            </ul>
                                        {% endif %}

                                    </li>
                                {% endfor %}
                                <li class="spe-menu-block-txt">
                                    <ul>
                                        <li>
                                            <a href="{{ parent.sub_cat_link }}">
                                                <img src="../image/{{ parent.sub_cat_img }}">
                                            </a>
                                        </li>
                                        <li>
                                            <h3 class="image-header"><a href="{{ parent.sub_cat_link }}">{{ parent.sub_cat_txt }}</a></h3>
                                        </li>
                                    </ul>
                                </li>

                            </ul>
                        </li>
                    {% else %}
                        <li style="position: relative;">
                            <a href="{{ parent.link }}" class="dropdown-standart">{{ parent.title }}</a>
                            <ul class="submenu-standart">
                                {% for child in parent.children %}
                                    <li>
                                        <a href="{{ child.link }}">{{ child.title }}</a>

                                        {% if not child.children is null %}
                                            <ul>
                                                {% for child_child in child.children %}
                                                    <li><a href="{{ child_child.link }}">{{ child_child.title }}</a></li>
                                                {% endfor %}
                                            </ul>
                                        {% endif %}

                                    </li>
                                {% endfor %}
                            </ul>
                        </li>
                    {% endif %}
                {% else %}
                    <li><a href="{{ parent.link }}">{{ parent.title }}</a></li>
                {% endif %}
            {% endfor %}
        </ul>
    </nav>

</div>