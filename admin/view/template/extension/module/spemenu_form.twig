{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-information" data-toggle="tooltip" title="{{ button_save }}"
                        class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i
                            class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible">
                <i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="fa fa-pencil"></i> {{ text_form }}
                </h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-information" class="form-horizontal">

                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-title">{{ entry_title }}</label>
                        <div class="col-sm-10">
                            <input type="text"
                                   name="spemenu[title]"
                                   placeholder="{{ entry_title }}"
                                   id="input-title" class="form-control"
                                   value="{{ spemenu_data ? spemenu_data.title }}" required>
                            {% if error_title %}
                                <div class="text-danger">{{ error_title }}</div>
                            {% endif %}
                        </div>
                    </div>

                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-type">{{ entry_type }}</label>
                        <div class="col-sm-10">
                            <select name="spemenu[type]" class="form-control" id="input-type" required>
                                <option value="type-link" {% if spemenu_data.type_item == 'type-link' %} selected {% endif %}>{{ type_link }}</option>
                                <option value="type-cat" {% if spemenu_data.type_item == 'type-cat' %} selected {% endif %}>{{ type_category }}</option>
                            </select>
                        </div>
                    </div>


                    <div id="select-type">

                        <div class="form-group required" id="type-cat" {% if spemenu_data.type_item == 'type-link' %} style="display: none;" {% endif %}>
                            <label class="col-sm-2 control-label">ThinkDo</label>
                            <div class="col-sm-10">
                                {{ text_type_category }}
                            </div>
                        </div>



                        <div class="form-group required" id="type-link" {% if spemenu_data.type_item == 'type-cat' %} style="display: none;" {% endif %}>
                            <label class="col-sm-2 control-label" for="input-link">{{ entry_link }}</label>
                            <div class="col-sm-10">
                                <input type="text"
                                       name="spemenu[link]"
                                       placeholder="{{ entry_link }}"
                                       id="input-link" class="form-control"
                                       value="{{ spemenu_data ? spemenu_data.link }}" required>
                                {% if error_link %}
                                    <div class="text-danger">{{ error_link }}</div>
                                {% endif %}
                            </div>
                        </div>
                    </div>



                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-parent">{{ entry_parent }}</label>
                        <div class="col-sm-10">
                            <select name="spemenu[parent]" class="form-control" id="input-parent" required>
                                <option value="0">{{ entry_root }}</option>
                                {{ spemenu_select }}
                            </select>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <script type="text/javascript">
